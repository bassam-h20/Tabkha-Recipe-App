<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Night theme -->
    <style name="Theme.Tabkha" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- ... other theme attributes ... -->

        <!-- Customize your night theme here. -->
        <item name="colorPrimary">@color/night_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/night_colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/night_colorOnPrimary</item>

        <!-- Add your other night theme attributes here -->
        <!-- For example, if you have a custom searchViewStyle for night mode -->
        <item name="searchViewStyle">@style/MySearchView</item>
    </style>

    <!-- Define your custom SearchView style for night mode -->
    <!-- themes.xml (night) -->
    <style name="MySearchView" parent="Widget.Material3.SearchView">
        <item name="searchViewBackground">@drawable/night_round_searchview</item>
<!--        <item name="hintTextColor">@color/white</item>-->
    </style>

    <style name="SwitchTheme" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/night_colorPrimary</item>
    </style>

</resources>
